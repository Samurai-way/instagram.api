generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  login             String   @unique
  email             String   @unique
  passwordHash      String
  createdAt         DateTime @default(now())
  emailConfirmation
}

model EmailConfirmation {
  confirmationCode String
  expirationDate   Date
  isConfirmed      Boolean @default(false)
}

